<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <h1 class="text-center"><%= form_title %></h1>

      <% if @product.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end  %>
        </ul>
      </div>
      <% end  %>
      <%= form_for @product do |i| %>
      <div>
      <label> Name </label>
      </div>
      <div>
      <%= i.text_field :name, class: "form-control" %>
      </div>
      <div>
      <label> Description </label>
      </div>
      <div>
      <%= i.text_area :description, class: "form-control"%>
      </div>
      <div>
      <label> Url </label>
      </div>
      <div>
      <%= i.text_field :url, class: "form-control"%>
      </div>
      <br>
      <div>
      <%= i.submit form_title, class: "btn btn-success"%>
      </div>
      <% end  %>
      <br>
    <div>
      <%= link_to "Back", products_path, class: "btn btn-dark"%>
    </div>
    </div>
  </div>
</div>
