<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="text-center">
        <h1>Products</h1>
      </div>
      <br>
        <% if signed_in? %>
        <div>
          <%= link_to "Publish New Product", new_product_path, class:"btn btn-light btn-lg btn-block" %>
        </div>
        <%end %>
        <br>
          <table class="table">
            <thead class="thead thead-dark">
              <tr>
                <th>Id</th>
                <th>Name</th>
                <th>url</th>
                <th>Description</th>
                <% if signed_in? %>
                <th>Delete</th>
                <th>Edit</th>
                <% end  %>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
              <tr>
                <td> <%= product.id %></td>
                <td> <%= link_to product.name, product %></td>
                <td> <%= product.url %></td>
                <td> <%= product.description %></td>
                <% if signed_in? %>
                <td><%= link_to "Delete", product, method: :delete, data: { confirm: "Sure you want to delete this product?" } %></td>
                <td> <%= link_to "Edit", edit_product_path(product) %></td>
                <% end  %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
