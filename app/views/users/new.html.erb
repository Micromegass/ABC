
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-3" >

      <h1> Create new user </h1>

      <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end  %>
      <%= form_for @user do |i| %>

        <div class="form-group">
        <%= i.label :email %>
        <%= i.email_field :email, class:"form-control input-lg", placeholder: "Email" %>
        </div>

        <div class="form-group">
        <%= i.label :password %>
        <%= i.password_field :password, class:"form-control input-lg", placeholder: "Password"%>
        </div>

        <div class="form-group">
        <%= i.label :name %>
        <%= i.text_field :name, class: "form-control input-lg", placeholder:"Name" %>
        </div>

        <div class="input-group input-group-lg">
          <%= i.label :twitter %>
          <%= i.text_field :twitter_handle, class: "form-control input-lg", placeholder: "Twitter" %>
        </div>

        <br>
        <div class="actions">
          <%= i.submit class: "btn btn-success" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
