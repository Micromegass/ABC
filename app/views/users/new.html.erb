
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-3" >

      <h1> create new user </h1>

      <%= form_for @user do |i| %>

        <div class="form-group">
        <%= i.email_field :email, class:"form-control input-lg", placeholder: "Email" %>
        </div>

        <div class="form-group">
        <%= i.password_field :password, class:"form-control input-lg", placeholder: "Password"%>
        </div>

        <div class="form-group">
        <%= i.text_field :name, class: "form-control input-lg", placeholder:"Name" %>
        </div>

        <div class="input-group input-group-lg">
          <span class="input-group-prepend" id="basic-addon1">@</span>
          <%= i.text_field :twitter_handle, class: "form-control input-lg", placeholder: "Twitter" %>
        </div>

        <div class="actions">
          <%= i.submit class: "btn btn-light btn-block btn-lg" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
